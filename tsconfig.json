{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext",
    ],
    "baseUrl": ".",
    "paths": {
      "react-claxx": ["src/index"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
